package test_package;

import java.util.Random;

public class das_affenprojekt_experimentieren
{

	public static void main(String[] args)
	{
		while(true) //Die Schleife, um den unten angegeben zufälligen Char unendlich oft herzugeben.
		{
			System.out.println(RandomTextausgabe());
		}
	} //main Ende
	
	public static String RandomTextausgabe() //Die Methode, den zufälligen String zu bauen
	{
		char[] zahl = "abcdefghijklmnopqrstuvwxyz".toCharArray(); //Das Alphabet als Pool für den String
		String text = new StringBuffer(30).toString();
		Random r2 = new Random();
		for(int i = 0; i < text.length(); i++)
		{
			text = text + zahl[r2.nextInt(zahl.length)];
		}
		return text;
	}
}
